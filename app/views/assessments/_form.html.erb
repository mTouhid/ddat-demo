<%= form_with(model: @assessment, class: "row g-3 m-4", local: true) do |f| %>
  <% @skills.each_with_index do |skill, index| %>
  <div class="border border-dark border-2 rounded-3 p-4">
  <div class="mb-3 row">
    <%= f.label :skill, id: "skill#{index+1}_name", class: "col-2 col-form-label" %>
    <div class="col-10">
      <%= f.text_field :skill, id: "skill#{index+1}_name", class: "form-control-plaintext", value: skill.skill.name, readonly: true %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :skill_definition, id: "skill#{index+1}_definition", class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :skill_definition, id: "skill#{index+1}_definition", class: "form-control-plaintext", value: skill.skill.definition, readonly: true, rows: 4 %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :skill_level, id: "skill#{index+1}_skill_level_name", class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_field :skill_level, id: "skill#{index+1}_skill_level_name", class: "form-control-plaintext", value: skill.skill_level.name, readonly: true %>
    </div>
  </div>
  <div class="mb-3 row">
    <%= f.label :skill_level_definition, id: "skill#{index+1}_skill_level_definition", class: "col-2 col-form-label" %>
    <div class="col-sm-10">
      <%= f.text_area :skill_level_definition, id: "skill#{index+1}_skill_level_definition", class: "form-control-plaintext", value: skill.skill_level_definition, readonly: true, rows: 4 %>
    </div>
  </div>
  <div class="mb-3 row">
    <label for="skill1_self_assessment_justification" class="col-sm-2 col-form-label">Justification</label>
    <div class="col-sm-10">
      <%= f.rich_text_area :skill1_self_assessment_justification %>
    </div>
  </div>
  </div>
  <% end %>
  <div class="row justify-content-md-center mt-5">
    <%= f.submit "Submit assessment", class: "col-6 btn btn-success btn-lg" %>
  </div>
<% end %>