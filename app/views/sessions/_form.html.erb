<%= form_with(scope: :sessions, url: signin_path, class: "row g-3 m-4", local: true) do |f| %>
  <div class="col-md-12">
    <%= f.label :email, class: "form-label"%>
    <%= f.email_field :email, class: "form-control form-control-lg" %>
  </div>
  <div class="col-md-12">
    <%= f.label :password, "Password", class: "form-label"%>
    <%= f.password_field :password, class: "form-control form-control-lg" %>
  </div>
  <div class="col-12">
    <%= f.submit "Submit", class: "btn btn-primary btn-lg" %>
  </div>
<% end %>