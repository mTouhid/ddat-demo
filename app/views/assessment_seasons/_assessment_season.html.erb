<%= form_with(model: @assessment_season, local: true, class: "row g-3 m-4") do |f| %>
<div class="col-8">
  <%= f.label :name, class: "form-label" %>
  <%= f.text_field :name, class: "form-control form-control-lg" %>
</div>
<div class="col-6">
  <%= f.label :start_date, class: "form-label" %>
  <%= f.date_field :start_date, class: "form-control form-control-lg" %>
</div>
<div class="col-6">
  <%= f.label :end_date, class: "form-label" %>
  <%= f.date_field :end_date, class: "form-control form-control-lg" %>
</div>
<div class="row mt-5">
  <div class="col-12">
    <%= f.submit "Save", class: "btn btn-success btn-lg col-3" %>
    <%= link_to "Cancel", :back, class: "btn btn-danger btn-lg col-3" %>
  </div>
</div>
<% end %>